<UserControl
    x:Class="OneDriveFileDownloader.WinUI.Controls.MinimalView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:OneDriveFileDownloader.UI.ViewModels">

    <StackPanel>
        <TextBlock Text="Videos" FontWeight="SemiBold" />
        <ListView ItemsSource="{Binding Videos}" x:Name="VideosList" Height="300" IsItemClickEnabled="True" SelectionMode="Single" ItemClick="VideosList_ItemClick">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="vm:DownloadItemViewModel">
                    <StackPanel Orientation="Horizontal" Padding="6">
                        <TextBlock Text="{x:Bind File.Name}" Width="220" AutomationProperties.Name="{x:Bind File.Name}" />
                        <ProgressBar Value="{x:Bind Progress}" Width="120" Margin="8,0,0,0" AutomationProperties.Name="Progress" />
                        <TextBlock Text="{x:Bind Progress, StringFormat='{}{0:N0}%'}" Margin="8,0,0,0" VerticalAlignment="Center" />
                        <TextBlock Text="{x:Bind Status}" Margin="8,0,0,0" VerticalAlignment="Center" />
                        <TextBlock Text="{x:Bind EstimatedRemaining}" Margin="8,0,0,0" VerticalAlignment="Center" />
                        <Button Content="Cancel" Margin="8,0,0,0" Click="CancelButton_Click" IsEnabled="{x:Bind IsDownloading}" AutomationProperties.Name="Cancel" />
                        <Button Content="Retry" Margin="8,0,0,0" Click="RetryButton_Click" IsEnabled="{x:Bind (!IsDownloading) && (Status == "Error")}" AutomationProperties.Name="Retry" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
            <Button Content="Download Selected" Click="DownloadSelectedButton_Click" />
            <TextBlock Text="{Binding StatusText}" Margin="12,6,0,0" VerticalAlignment="Center" />
        </StackPanel>
    </StackPanel>
</UserControl>