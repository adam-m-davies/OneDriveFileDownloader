<Application
    x:Class="OneDriveFileDownloader.WinUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:conv="using:OneDriveFileDownloader.WinUI.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="ms-appx:///Controls/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <conv:SecondsToEtaConverter x:Key="SecondsToEtaConverter" />
            <conv:StatusToGlyphConverter x:Key="StatusToGlyphConverter" />
            <conv:StatusToBrushConverter x:Key="StatusToBrushConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>