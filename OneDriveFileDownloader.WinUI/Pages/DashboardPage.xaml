<Page
    x:Class="OneDriveFileDownloader.WinUI.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OneDriveFileDownloader.WinUI.Pages"
    xmlns:vm="using:OneDriveFileDownloader.UI.ViewModels">

    <StackPanel Margin="8">
        <TextBlock Text="Dashboard" FontSize="18" FontWeight="SemiBold" />
        <TextBlock Text="Quick actions" Margin="0,8,0,0" />
        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
            <Button Content="Scan last shared item" x:Name="ScanLastButton" />
            <Button Content="Open downloads folder" Margin="8,0,0,0" x:Name="OpenDownloads" />
        </StackPanel>

        <TextBlock Text="Recent downloads" Margin="0,12,0,0" />
        <ListView x:Name="RecentList" Height="200" IsItemClickEnabled="True">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="vm:DownloadRecord">
                    <StackPanel Orientation="Horizontal" Padding="4">
                        <TextBlock Text="{x:Bind FileName}" Width="200" />
                        <TextBlock Text="{x:Bind DownloadedAtUtc, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" Margin="8,0,0,0" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</Page>