<Page
    x:Class="OneDriveFileDownloader.WinUI.Pages.ExplorerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OneDriveFileDownloader.WinUI.Pages"
    xmlns:vm="using:OneDriveFileDownloader.UI.ViewModels">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TreeView x:Name="FolderTree" Grid.Column="0" Margin="8" />

        <StackPanel Grid.Column="1" Margin="8">
            <TextBlock Text="Folder contents" FontWeight="SemiBold" />
            <StackPanel Orientation="Horizontal" Margin="0,8,0,8">
                <Button x:Name="ScanFolderButton" Content="Scan folder" AutomationProperties.Name="Scan folder" />
                <Button x:Name="DownloadSelectedButton" Content="Download selected" Margin="8,0,0,0" AutomationProperties.Name="Download selected" />
            </StackPanel>
            <ListView x:Name="ContentsList" Height="400" IsItemClickEnabled="True" />
        </StackPanel>
    </Grid>
</Page>