<?xml version="1.0" encoding="utf-8"?>
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="OneDriveFileDownloader.Avalonia.SignInWindow"
        Title="Sign in" Width="400" Height="160">
  <StackPanel Margin="12" Spacing="8">
    <TextBlock Text="Client ID" />
    <TextBox x:Name="ClientIdBox" />
    <CheckBox x:Name="SaveCheck" Content="Save client id" IsChecked="True" />
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
      <Button x:Name="SaveBtn" Content="Sign in" />
      <Button x:Name="CancelBtn" Content="Cancel" />
    </StackPanel>
    <TextBlock x:Name="StatusText" TextWrapping="Wrap" FontSize="12" Foreground="Gray" Margin="0,8,0,0" />
  </StackPanel>
</Window>