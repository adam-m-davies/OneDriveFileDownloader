<?xml version="1.0" encoding="utf-8"?>
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:OneDriveFileDownloader.Avalonia.Views"
        x:Class="OneDriveFileDownloader.Avalonia.MainWindow"
        Title="OneDrive File Downloader" Width="800" Height="600">
  <DockPanel>
    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="8">
      <Image Width="32" Height="32" Source="{Binding UserThumbnail, Converter={StaticResource BytesToBitmapConverter}}" Margin="0,0,8,0" />
      <TextBlock Text="{Binding UserDisplayName}" VerticalAlignment="Center" Margin="0,0,16,0" />
      <Button Name="MinimalBtn" Content="Minimal" Margin="4" />
      <Button Name="DashboardBtn" Content="Dashboard" Margin="4" />
      <Button Name="ExplorerBtn" Content="Explorer" Margin="4" />
      <Button Name="SignInBtn" Content="Sign in" Margin="4" />
      <Button Name="SettingsBtn" Content="Settings" Margin="8,0,0,0" />
    </StackPanel>
    <ContentControl Name="MainContent" />
    <Border DockPanel.Dock="Bottom" Background="Transparent" Padding="8">
      <TextBlock Text="{Binding StatusText}" Name="StatusTextBlock" />
    </Border>
  </DockPanel>
</Window>
