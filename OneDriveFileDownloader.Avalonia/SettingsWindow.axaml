<?xml version="1.0" encoding="utf-8"?>
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="OneDriveFileDownloader.Avalonia.SettingsWindow"
        Width="500" Height="200" Title="Settings">
  <StackPanel Margin="12" Spacing="8">
    <TextBlock Text="Client ID" />
    <TextBox Name="ClientIdBox" />
    <TextBlock Text="Local downloads folder" />
    <StackPanel Orientation="Horizontal" Spacing="8">
      <TextBox Name="FolderBox" Width="350" />
      <Button Name="BrowseBtn" Content="Browse" />
    </StackPanel>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
      <Button Name="SaveBtn" Content="Save" />
      <Button Name="CancelBtn" Content="Cancel" />
    </StackPanel>
  </StackPanel>
</Window>