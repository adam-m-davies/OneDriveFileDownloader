<?xml version="1.0" encoding="utf-8"?>
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="OneDriveFileDownloader.Avalonia.SettingsWindow"
        Width="500" Height="200" Title="Settings">
  <StackPanel Margin="12" Spacing="8">
    <TextBlock Text="Client ID" />
    <TextBox x:Name="ClientIdBox" />
    <TextBlock Text="Local downloads folder" />
    <StackPanel Orientation="Horizontal" Spacing="8">
      <TextBox x:Name="FolderBox" Width="350" />
      <Button x:Name="BrowseBtn" Content="Browse" />
    </StackPanel>
    <TextBlock Text="UI Experience" />
    <ComboBox x:Name="UxBox" SelectedIndex="0">
      <ComboBoxItem Content="Minimal" />
      <ComboBoxItem Content="Dashboard" />
      <ComboBoxItem Content="Explorer" />
    </ComboBox>
    <CheckBox x:Name="ScanOnSelectionBox" Content="Automatically scan folder on selection" IsChecked="True" />
    <Button x:Name="ClearClientBtn" Content="Clear saved Client ID" />
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
      <Button x:Name="SaveBtn" Content="Save" />
      <Button x:Name="CancelBtn" Content="Cancel" />
    </StackPanel>
  </StackPanel>
</Window>